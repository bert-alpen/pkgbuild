# Maintainer: Bert Alpen <bert.alpen@googlemail.com>

pkgname=pidesktop
pkgver=0.1
pkgrel=2
pkgdesc="Systemd services and script files for the power button functionality of the 'pi desktop' enclosure from element14 (https://community.element14.com/products/devtools/product-pages/w/documents/22485)"
arch=('armv7h')
url="https://github.com/bert-alpen/pidesktop"
license=('MIT')
depends=(
  'python'
  'python-rpi-gpio'
)
provides=('pidesktop')
source=(
  "$pkgname-$pkgver.tar.gz::https://github.com/bert-alpen/pidesktop/archive/refs/tags/v${pkgver}.tar.gz"
)
md5sums=('SKIP')

package() {
  cd $pkgname-$pkgver
  install -D -m 755 "pd-powerkey.py" "${pkgdir}/usr/lib/pidesktop"
  install -D -m 755 "pd-shutdown.py" "${pkgdir}/usr/lib/pidesktop"
  install -D -m 755 "pd-reboot.py"   "${pkgdir}/usr/lib/pidesktop"

  install -D -m 644 "${pkgname}-powerbutton.service" "${pkgdir}/usr/lib/systemd/system/${pkgname}-powerbutton.service"
  install -D -m 644 "${pkgname}-reboot.service"      "${pkgdir}/usr/lib/systemd/system/${pkgname}-reboot.service"
  install -D -m 644 "${pkgname}-shutdown.service"    "${pkgdir}/usr/lib/systemd/system/${pkgname}-shutdown.service"
}
